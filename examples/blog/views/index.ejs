<%- include('partials/head') -%>
  <nav class="bg-gray-700 w-100 relative">
    <div class="container py-4 flex justify-between w-100 items-center mx-auto">
      <div>
        <a href="/" class="text-white"><%= title %></a>
      </div>
      <div>
        <ul class="flex items-center">
          <li class="px-2">
            <a href="/home" class="text-white">Home</a>
          </li>
          <li class="px-2">
            <a href="/about" class="text-white">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <main class="container mx-auto mt-5">
    <div class="article">
      <div class="grid grid-cols-6 gap-4">
        <div class="col-span-4 after">
          <% if (data) { %>
            <% data.forEach(function(article) { %>
              <div class="border border-blue-300 shadow rounded-md p-4 max-w-2xl mt-3">
                <div class="@animate-pulse flex space-x-4">
                  <div class="rounded-full bg-blue-300 h-12 w-12"></div>
                  <div class="flex-1 space-y-4 py-1">
                    <div class="h-4 @bg-blue-100 rounded w-3/4">
                      <%= article.judul %>
                    </div>
                    <sub><%= article.dibuat %></sub>
                    <div class="space-y-2">
                      <div class="h-4 @bg-blue-100 rounded remove-tag">
                        <%= article.isi %>
                      </div>
                      <!-- <div class="h-4 bg-blue-300 rounded w-5/6"></div> -->
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
        <div class="col-span-4 before">
          <div class="border border-blue-300 shadow rounded-md p-4 max-w-2xl mt-3">
            <div class="animate-pulse flex space-x-4">
              <div class="rounded-full bg-blue-300 h-12 w-12"></div>
              <div class="flex-1 space-y-4 py-1">
                <div class="h-4 bg-blue-300 rounded w-3/4"></div>
                <div class="space-y-2">
                  <div class="h-4 bg-blue-300 rounded"></div>
                  <div class="h-4 bg-blue-300 rounded w-5/6"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="border border-blue-300 shadow rounded-md p-4 max-w-2xl mt-3">
            <div class="animate-pulse flex space-x-4">
              <div class="rounded-full bg-blue-300 h-12 w-12"></div>
              <div class="flex-1 space-y-4 py-1">
                <div class="h-4 bg-blue-300 rounded w-3/4"></div>
                <div class="space-y-2">
                  <div class="h-4 bg-blue-300 rounded"></div>
                  <div class="h-4 bg-blue-300 rounded w-5/6"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="border border-blue-300 shadow rounded-md p-4 max-w-2xl mt-3">
            <div class="animate-pulse flex space-x-4">
              <div class="rounded-full bg-blue-300 h-12 w-12"></div>
              <div class="flex-1 space-y-4 py-1">
                <div class="h-4 bg-blue-300 rounded w-3/4"></div>
                <div class="space-y-2">
                  <div class="h-4 bg-blue-300 rounded"></div>
                  <div class="h-4 bg-blue-300 rounded w-5/6"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>...</div>
      </div>
    </div>
  </main>
<%- include('partials/footer') -%>
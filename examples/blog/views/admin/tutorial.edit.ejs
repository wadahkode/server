  <div class="grid grid-cols-3 gap-4 pr-10 mt-16">
    <main class="col-span-3 mt-5 mb-20 ml-72 h-screen">
      <div class="mt-1 main">
        <h1 class="mb-3">Update tutorial</h1>
          <% data.forEach(function(tutorial, key) { %>
            <div class="hidden">
              <b class="session-username">
                <%= tutorial.penulis %>
              </b>
            </div>
            <form action="/admin/tutorial/update" class="bg-gray-100 border py-2 px-3" method="POST">
              <input type="hidden" name="id" value="<%= tutorial.id %>">
              <div>
                <legend>Judul</legend>
                <input type="text" name="judul" class="border rounded px-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-blue-300" value="<%= tutorial.judul %>"/>
              </div>
              <div class="my-3">
                <legend>Kategori</legend>
                <select name="kategori" class="border rounded px-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-blue-300">
                  <% if (tutorial.kategori == 'games') { %>
                    <option value="games">Game</option>
                  <% } %>
                  <option value="programing">Programing</option>
                </select>
              </div>
              <div name="editor" class="mt-3 editor remove-tag"><%= tutorial.isi %></div>
              <div class="mt-3">
                <legend>Penulis</legend>
                <input type="text" name="penulis" class="border rounded px-4 py-2 d-none" value="<%= tutorial.penulis %>"/>
              </div>
              <div class="mt-5">
                <button type="submit" class="border rounded bg-red-600 p-1 w-24 text-white">Update</button>
              </div>
            </form>
          <% }) %>
      </div>
    </main>
    

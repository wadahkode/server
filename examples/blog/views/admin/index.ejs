<%- include('../partials/head') -%>
  <main class="container mx-auto w-auto lg:w-1/4 sm:w-1/2 p-3 mt-40">
    <% if (message != false) { %>
      <div class="<%= message.backgroundStatus %> px-4 py-2 rounded text-white mb-3">
        <%= message.value %>
      </div>
    <% } %>
    <h1>
      Silahkan masuk untuk melanjutkan kehalaman utama.
    </h1>
    <form class="mt-3" action="/admin/signin" method="post" accept-charset="utf-8">
      <div class="text-gray-400 focus-within:text-gray-600 ...">
        <input type="text" class="focus:ring-1 focus:ring-gray-100 focus:outline-none border border-gray-200 rounded bg-white py-2 px-3 w-full" name="username" placeholder="nama pengguna" required/>
      </div>
      <div class="text-gray-400 focus-within:text-gray-600 mt-2 ...">
        <input type="password" class="focus:ring-1 focus:ring-gray-100 focus:outline-none border border-gray-200 rounded bg-white py-2 px-3 w-full" name="password" placeholder="kata sandi" required/>
      </div>
      <div class="text-white mt-3">
        <button type="submit" class="bg-blue-500 border border-transparent w-full rounded p-2">masuk</button>
      </div>
    </form>
    
    <div class="mt-5">
      <p>perlu bantuan, <a href="/admin/forget-password" class="text-blue-600">lupa kata sandi?</a></p>
      <p>atau <a href="/admin/register" class="text-blue-600">buat akun baru</a></p>
    </div>
  </main>
<%- include('../partials/footer') -%>